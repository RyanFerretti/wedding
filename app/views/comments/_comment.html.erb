<% div_for comment, :class => 'comment even thread-even depth-1 self-clear p3comment' do %>
  <div class="comment-picture">
    <% if comment.user && comment.user.avatar.file? %>
      <a class="profile_lightbox_links" href='<%= comment.user.avatar.url(:original) %>'>
        <%= image_tag comment.user.avatar.url(:thumb) %>
      </a>
    <% else %>
        <%= image_tag "/images/missing.png" %>
    <% end %>
  </div>
  <div class="comment-top">
    <span class="comment-author">
      <a href='#' rel='external nofollow' class='url'><%= comment.author.titleize %></a>
      <span>-</span>
    </span>
    <span class="comment-time"><%= time_ago_in_words(comment.created_at) %> ago</span>
  </div>
  <div class="comment-text">
    <p><%= h comment.body %></p>
  </div>
<% end %>